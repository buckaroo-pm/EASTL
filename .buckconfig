[project]
  ignore = .git

[cxx]
  should_remap_host_platform = true
  cxxflags = -std=c++14
  cxxppflags = -DEASTL_OPENSOURCE=1 -DEASTL_THREAD_SUPPORT_AVAILABLE=0 -D_CHAR16T -D_CRT_SECURE_NO_WARNINGS -D_SCL_SECURE_NO_WARNINGS

[cxx#linux-x86_64]
  cxxflags = -std=c++14
  cxxppflags = -DEA_PLATFORM_LINUX=1 -DEASTL_OPENSOURCE=1 -DEASTL_THREAD_SUPPORT_AVAILABLE=0 -D_CHAR16T -D_CRT_SECURE_NO_WARNINGS -D_SCL_SECURE_NO_WARNINGS

[cxx#macosx-x86_64]
  cxxflags = -std=c++14
  cxxppflags = -DEA_PLATFORM_OSX=1 -DEASTL_OPENSOURCE=1 -DEASTL_THREAD_SUPPORT_AVAILABLE=0 -D_CHAR16T -D_CRT_SECURE_NO_WARNINGS -D_SCL_SECURE_NO_WARNINGS
